extends layout

block content
  main.p-5
    if error
      .toast-wrapper(style="position: absolute; top: 60px; right: 20px;")
        .toast.toast-error.fade.show(role="alert" aria-live="assertive" aria-atomic="true")
          .toast-header
            strong.me-auto Reset password process went wrong
            button(type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close")
          .toast-body.text-danger=error
    h1.visually-hidden Login page
    .container
      .row.justify-content-center
        .col-6
          section.card.p-4
            h2.text-center Welcome
            form(action="/api/auth/reset-password" method="POST")
              div.mb-3
                label.form-label(for="email") Email
                input#email.form-control(type="email" name="email" placeholder="email@domain.com" value=email required)
              div.d-grid.gap-2
                button.btn.btn-primary(type='submit') Send recovery email
                p.text-center Don't have an account? <a href='/sign-up'>Sign up</a>
