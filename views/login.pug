extends layout

block content
  main.p-5
    h1.visually-hidden Login page
    .container
      .row.justify-content-center
        .col-6
          section.card.p-4
            h2.text-center Welcome
            form(action="/api/auth/login" method="POST")
              div.mb-3
                label.form-label(for="login") Username
                input#email.form-control(type="text" name="username" placeholder="Tester" value=username required)
              div.mb-4
                label.form-label(for="password") Password
                input#password.form-control(type="password" name="password" placeholder='password' value=password required)
              div.d-grid.gap-2
                button.btn.btn-primary(type='submit') Log in
                p.text-center Don't have an account? <a href='/sign-up'>Sign up</a>
                if error
                  p.text-center.text-danger=error
